

<div class="product-list-selector">
  <h2>Selected Products</h2>
  <ul>
    {% for product in settings.selected_products %}
      <li>
        <a href="{{ product.url }}">
          {{ product.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>

<style>
.product-list-selector {
  /* Add your styles here */
}
</style>
{% schema %}
{
  "name": "Product List Selector",
  "settings": [
    {
      "type": "product",
      "id": "selected_products",
      "label": "Select Products",
      "info": "Choose multiple products to display."
    }
  ],
  "presets": [
    {
      "name": "Product List Selector",
      "category": "Custom"
    }
  ]
}
{% endschema %}