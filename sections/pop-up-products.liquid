

<div class="product-blocks">
  <h2>Selected Products</h2>
  <ul>
    {% for block in section.blocks %}
      {% assign product = block.settings.selected_product %}
      {% if product %}
        <li>
          <a href="{{ product.url }}">
            {{ product.title }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

<style>
.product-list-selector {
  /* Add your styles here */
}
</style>
{% schema %}
{
  "name": "Product Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "selected_product",
          "label": "Select a Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}