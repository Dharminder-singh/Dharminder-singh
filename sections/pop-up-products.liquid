{% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}

<div class="product-blocks">
  <h2>Selected Products</h2>
  <ul>
    {% for block in section.blocks %}
      {% assign product = block.settings.selected_product %}
      {% if product %}
        <li>
          <a href="{{ product.url }}">
            {{ product.title }}
          </a>
          <div class="product-info-image">
                {% render 'product-media-modal', product: product, variant_images: variant_images %}
          {% assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src' %}</div>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

<style>
.product-list-selector {
  /* Add your styles here */
}
</style>
{% schema %}
{
  "name": "Product Blocks",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "selected_product",
          "label": "Select a Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}